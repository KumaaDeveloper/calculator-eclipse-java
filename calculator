// Use Yang Di Pakai

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		//Intro Calculator
		System.out.println("Hai Aku Raphael, Silahkan Isi Nama Kamu Terlebih Dahulu");
		
		//Nama
		System.out.println("Masukkan Nama Mu");
		String name = scan.nextLine();
		System.out.println("Selamat Datang "+ name);
		System.out.println("Silahkan Input Untuk Kalkulator");
		
		//Input Pertama
		System.out.println("Input Angka Pertama:");
		int $pertama = scan.nextInt();
		scan.nextLine();
		
		//Opsi Menggunakan Sistem Angka (1-5)
		System.out.print("Pilih Operasi  " +
	              "\n1.\tPertambahan" +
	        		"\n2.\tPengurangan" +
	        		"\n3.\tPerkalian" +
	        		"\n4. \tPembagian\n");
		double raphael = scan.nextDouble();
        double pertambahan = 1;
        double pengurangan = 2;
        double perkalian = 3;
        double pembagian = 4 ;
        
        //Input Angka Kedua
		System.out.println("Input Angka Kedua:");
		int $kedua = scan.nextInt();
		scan.nextLine();
		           
		if (raphael == pertambahan) {
			System.out.println($pertama + $kedua);
		}
		else if (raphael == pengurangan) {
			System.out.println($pertama - $kedua);
		}
		else if (raphael == perkalian) {
			System.out.println($pertama * $kedua);
		}
		else if (raphael == pembagian) {
			System.out.println($pertama / $kedua);
		}
		else {
			System.out.println("Terjadi Kesalahan Pada Operator");
	}

}
}
